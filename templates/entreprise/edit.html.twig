{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier l'entreprise{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Modifier l'entreprise</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modifier les informations de l'entreprise</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.nom, {
                            'label': 'Nom de l\'entreprise',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.secteur, {
                            'label': 'Secteur d\'activité',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.email, {
                            'label': 'Email',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.telephone, {
                            'label': 'Téléphone',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        {{ form_row(form.rue, {
                            'label': 'Rue',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-4">
                        {{ form_row(form.codePostal, {
                            'label': 'Code Postal',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.ville, {
                            'label': 'Ville',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.pays, {
                            'label': 'Pays',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        {{ form_row(form.description, {
                            'label': 'Description',
                            'attr': {
                                'class': 'form-control',
                                'rows': 5
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.logo, {
                            'label': 'Logo (URL)',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.active, {
                            'label': 'Statut',
                            'attr': {'class': 'form-select'}
                        }) }}
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('app_entreprises') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 