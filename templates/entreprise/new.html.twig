{% extends 'dashboard/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/entreprise.css') }}">
{% endblock %}

{% block title %}Nouvelle Entreprise{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Nouvelle Entreprise</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.secteur) }}
                                    {{ form_widget(form.secteur) }}
                                    {{ form_errors(form.secteur) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <h4 class="mb-3">Adresse</h4>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    {{ form_label(form.rue) }}
                                    {{ form_widget(form.rue) }}
                                    {{ form_errors(form.rue) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.codePostal) }}
                                    {{ form_widget(form.codePostal) }}
                                    {{ form_errors(form.codePostal) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.ville) }}
                                    {{ form_widget(form.ville) }}
                                    {{ form_errors(form.ville) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.pays) }}
                                    {{ form_widget(form.pays) }}
                                    {{ form_errors(form.pays) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.telephone) }}
                                    {{ form_widget(form.telephone) }}
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.active) }}
                                    {{ form_widget(form.active) }}
                                    {{ form_errors(form.active) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <a href="{{ path('app_entreprises') }}" class="btn btn-secondary">Retour</a>
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}