{% extends 'dashboard/layout.html.twig' %}

{% block title %}Détails de l'entreprise{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">{{ entreprise.nom }}</h3>
                <div>
                    <a href="{{ path('app_entreprises_stage') }}" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <a href="{{ path('app_entreprise_stage_edit', {'id': entreprise.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4 class="mb-0">Informations générales</h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th style="width: 30%">Nom</th>
                                            <td>{{ entreprise.nom }}</td>
                                        </tr>
                                        <tr>
                                            <th>Secteur</th>
                                            <td>{{ entreprise.secteur }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ entreprise.email }}</td>
                                        </tr>
                                        <tr>
                                            <th>Téléphone</th>
                                            <td>{{ entreprise.telephone }}</td>
                                        </tr>
                                        <tr>
                                            <th>Statut</th>
                                            <td>
                                                <span class="badge bg-{{ entreprise.active ? 'success' : 'danger' }}">
                                                    {{ entreprise.active ? 'Actif' : 'Inactif' }}
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h4 class="mb-0">Description</h4>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">{{ entreprise.description|nl2br }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="mb-0">Adresse</h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th style="width: 30%">Rue</th>
                                            <td>{{ entreprise.adresse.rue }}</td>
                                        </tr>
                                        <tr>
                                            <th>Code postal</th>
                                            <td>{{ entreprise.adresse.codePostal }}</td>
                                        </tr>
                                        <tr>
                                            <th>Ville</th>
                                            <td>{{ entreprise.adresse.ville }}</td>
                                        </tr>
                                        <tr>
                                            <th>Pays</th>
                                            <td>{{ entreprise.adresse.pays }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 