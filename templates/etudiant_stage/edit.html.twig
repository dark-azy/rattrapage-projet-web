{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier un étudiant{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Modifier un étudiant</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom_etudiant, {
                        'label': 'Nom',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.prenom_etudiant, {
                        'label': 'Prénom',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.email, {
                        'label': 'Email',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.promotion, {
                        'label': 'Promotion',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.statut, {
                        'label': 'Statut',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                <a href="{{ path('app_etudiants_stage') }}" class="btn btn-secondary">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 