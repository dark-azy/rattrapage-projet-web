{% extends 'dashboard/layout.html.twig' %}

{% block title %}Créer un étudiant{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Créer un étudiant</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.email, {
                                'label': 'Email',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.password, {
                                'label': 'Mot de passe',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_row(form.nom_etudiant, {
                                'label': 'Nom',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prenom_etudiant, {
                                'label': 'Prénom',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.promotion, {
                                'label': 'Promotion',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.statut, {
                                'label': 'Statut',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Créer l'étudiant
                        </button>
                        <a href="{{ path('app_etudiants_stage') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 