{% extends 'dashboard/layout.html.twig' %}

{% block title %}Détail de l'étudiant{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Détail de l'étudiant</h3>
            <a href="{{ path('app_etudiants_stage') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Informations générales</h5>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ etudiant.nomEtudiant }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ etudiant.prenomEtudiant }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ etudiant.email }}</td>
                            </tr>
                            <tr>
                                <th>Promotion</th>
                                <td>{{ etudiant.promotion.nom }}</td>
                            </tr>
                            <tr>
                                <th>Statut</th>
                                <td>
                                    <span class="badge bg-{{ etudiant.statut == 'En stage' ? 'success' : 'warning' }}">
                                        {{ etudiant.statut }}
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Ajoute ici d'autres infos si besoin -->
            </div>
        </div>
    </div>
</div>
{% endblock %} 