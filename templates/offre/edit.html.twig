{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier l'offre{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Modifier l'offre</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modifier les informations de l'offre</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.titre_offre, {
                            'label': 'Titre de l\'offre',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.entreprise, {
                            'label': 'Entreprise',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.duree_stage, {
                            'label': 'Durée du stage (en semaines)',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.salaire, {
                            'label': 'Rémunération (€)',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.date_debut_stage, {
                            'label': 'Date de début',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.date_fin_stage, {
                            'label': 'Date de fin',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        {{ form_row(form.description_offre, {
                            'label': 'Description',
                            'attr': {
                                'class': 'form-control',
                                'rows': 5
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        {{ form_row(form.competences_requises, {
                            'label': 'Compétences requises',
                            'attr': {
                                'class': 'form-control',
                                'rows': 3
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.statut_offre, {
                            'label': 'Statut de l\'offre',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('app_offres') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 