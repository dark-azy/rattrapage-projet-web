{% extends 'base.html.twig' %}

{% block title %}Nouvelle Promotion{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Créer une nouvelle promotion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom de la promotion', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.annee, 'Année', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.annee) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_promotions_stage') }}" class="btn btn-secondary">Retour à la liste</a>
                        <button type="submit" class="btn btn-primary">Créer la promotion</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 