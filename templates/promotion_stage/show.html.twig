{% extends 'dashboard/layout.html.twig' %}

{% block title %}Détail de la promotion{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Détail de la promotion</h3>
            <a href="{{ path('app_promotions_stage') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Informations générales</h5>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ promotion.nom }}</td>
                            </tr>
                            <tr>
                                <th>Campus</th>
                                <td>{{ promotion.campus }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ promotion.adresse }}</td>
                            </tr>
                            <tr>
                                <th>Pilote</th>
                                <td>
                                    {% if promotion.pilote %}
                                        {{ promotion.pilote.nomPilote }} {{ promotion.pilote.prenomPilote }}
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Nombre d'étudiants</th>
                                <td>{{ promotion.etudiants|length }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Étudiants de la promotion</h5>
                    {% if promotion.etudiants|length > 0 %}
                        <ul class="list-group">
                            {% for etudiant in promotion.etudiants %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ etudiant.nomEtudiant }} {{ etudiant.prenomEtudiant }}
                                    <span class="badge bg-primary">{{ etudiant.statut }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="alert alert-info">Aucun étudiant dans cette promotion.</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 