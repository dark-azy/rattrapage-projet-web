{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier la promotion de {{ etudiant.nomEtudiant }} {{ etudiant.prenomEtudiant }}{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">
                            <i class="fas fa-user-graduate me-2"></i>
                            Modifier la promotion de {{ etudiant.nomEtudiant }} {{ etudiant.prenomEtudiant }}
                        </h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.promotion) }}
                            </div>

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="btn btn-secondary" href="{{ path('app_users') }}">
                                    <i class="fas fa-arrow-left me-1"></i> Retour
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 