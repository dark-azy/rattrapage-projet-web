{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block dashboard_content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Modifier l'utilisateur</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.profile_img) }}
                        </div>
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="row mb-3">
                            <div class="col-12">
                                {{ form_row(form.roles) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('app_users') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 